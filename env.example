################################################################################
#                 ENVIRONMENT VARIABLES EXAMPLE (.env.example)                 #
# NOTE: This file is for documentation. Copy its content to a new file named   #
#       .env and replace all placeholders with actual values.                  #
################################################################################

# === TELEGRAM CONFIG ===
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
ADMIN_ID=YOUR_ADMIN_TELEGRAM_ID
ADMIN_CHAT_ID=YOUR_ADMIN_CHAT_ID

# === WALLETS (for tracking / payments) ===
SAFE_SOL_WALLET=YOUR_SAFE_MASTER_SOL_WALLET
SAFE_ETH_WALLET=YOUR_SAFE_MASTER_ETH_WALLET
BTC_WALLET=YOUR_BTC_WALLET_ADDRESS
SOL_WALLET=YOUR_SOL_PAYMENT_WALLET
ETH_WALLET=YOUR_ETH_PAYMENT_WALLET

# === BLOCKCHAIN / RPC CONFIG ===
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# === DATABASE (Render Postgres URL) ===
# Format: postgresql+asyncpg://USER:PASSWORD@HOST/DBNAME
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# === SECURITY ===
ENCRYPTION_KEY=YOUR_RANDOM_ENCRYPTION_KEY

# === BOT MODE ===
MODE=production
